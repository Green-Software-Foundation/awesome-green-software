---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			body, html {
				margin: 0;
				padding: 0;
				width: 100%;
				display: flex;
				flex-direction: column;
				background-color: var(--light-cream); /* Light tan background */
			}
			main {
				flex: 1;
				display: flex;
				justify-content: center;
				align-items: center;
				width: 100%;
				padding: 0;
				max-width: 100%; /* Added to ensure no overflow */
				/* Remove scrollbar */
				overflow: hidden;
				/* add larger height for iframe */
				height: 215vh;
			}
			iframe {
				border: none;
				width: 100%;
				height: 250vh;
				max-width: 100%; /* Added to ensure no overflow */
				margin: 0; /* Added to remove any margin */
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<!-- Embedded form -->
			<iframe src="https://81zdjror.forms.app/contact-form-1"></iframe>
		</main>
		<Footer />
	</body>
</html>



